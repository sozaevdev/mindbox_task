{
  "compilerOptions": {
    "baseUrl": ".",

    "paths": {
      "@/*": ["./src/*"]
    },

    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },

  "include": ["./src/**/*.tsx", "./src/**/*.ts", "./config/jest/setupTests.ts", "src/features/addTodo"]
}
